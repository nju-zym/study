Checks: 'clang-diagnostic-*,clang-analyzer-*,cppcoreguidelines-*, modernize-*, -cppcoreguidelines-naming-conventions, -cppcoreguidelines-iostream-use-io-manipulators, -cppcoreguidelines-pro-type-legacy-headers, -modernize-use-nullptr'
WarningsAsErrors: true
AnalyzeTemporaryDtors: false
ExtraArgs: ['-std=c++23', '-fno-exceptions', '-fno-rtti', '-fno-omit-frame-pointer', '-fno-strict-aliasing]
CheckOptions:
  - key: cppcoreguidelines-avoid-magic-numbers.IgnoredIntegerValues
    value: ''
  - key: cppcoreguidelines-naming-conventions.MinVariableNameLength
    value: '0'